{
  "name": "trap-registration-api",
  "version": "1.2.0",
  "description": "",
  "author": "Mike Coats <mike.coats@nature.scot>",
  "repository": "github:Scottish-Natural-Heritage/trap-registration-api",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "premigrations": "npx sequelize-cli db:migrate --env preMigrations --migrations-path util/db/pre-migrations >/dev/null",
    "migrations": "npx sequelize-cli db:migrate  --env database >/dev/null",
    "prestart": "npm run migrations",
    "start": "node --no-warnings src/server.js",
    "nm:run": "newman run tests/trap-registration-api.postman_collection.json",
    "test": "start-server-and-test start http://localhost:3001/trap-registration-api/v1/health nm:run"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "naturescot-utils": "^1.2.0",
    "notifications-node-client": "^5.1.0",
    "on-finished": "^2.3.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "sequelize-cli": "^6.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "newman": "^5.2.3",
    "prettier": "^2.3.1",
    "sqlite3": "^5.0.2",
    "start-server-and-test": "^1.12.5",
    "xo": "^0.40.3"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": 0,
      "import/extensions": 1,
      "new-cap": 0,
      "no-console": 1
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "trailingComma": "none"
  }
}
